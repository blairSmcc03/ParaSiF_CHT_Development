FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 273.15;

boundaryField
{   
    leftWall
    {
        type            fixedValue;
        value           $internalField;
    }
    

    rightWall
    {   
        type            customNeumannDirichletCoupledBoundary;
        value           uniform 273.15;
        kappaMethod     fluidThermo;
    }


    "(top|bottom)Wall"
    {
        type            zeroGradient;
    }

    frontAndBackPlanes
    {
        type            empty;
    }
}

// ************************************************************************* //
